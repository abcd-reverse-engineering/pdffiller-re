<Window x:Class="pdfFiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:loader="clr-namespace:pdfFiller.ViewModel"
        xmlns:converter="clr-namespace:pdfFiller.Converters"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded" Title="pdfFiller" MinHeight="550" Height="auto"
        MinWidth="800" Width="auto" WindowStartupLocation="CenterScreen">
  <Grid>
    <md:DialogHost Identifier="UpdateRootDialog">
      <md:DialogHost Identifier="RootDialog">
        <Grid>
          <ContentControl x:Name="Container" Width="auto" Height="auto"/>
          <md:Snackbar x:Name="MySnackbar" Background="#222" Foreground="White" FontFamily="{DynamicResource Medium}"/>
        </Grid>
      </md:DialogHost>
    </md:DialogHost>
  </Grid>
</Window>