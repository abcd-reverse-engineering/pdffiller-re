<UserControl x:Class="pdfFiller.UI.Editor.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             xmlns:webview="clr-namespace:pdfFiller.UI.WebView"
             Background="#fff">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Border BorderBrush="#eee" BorderThickness="0 0 0 2" Grid.Row="0">
      <Grid>
        <Button Click="Button_Click" Style="{StaticResource ButtonWithIconLeft}"
                Content="{DynamicResource to_my_docs}" Foreground="#444" HorizontalAlignment="Left"
                FontFamily="{DynamicResource Medium}"
                prop:ButtonAttachedProperties.ButtonIcon="/pdfFiller;component/Resources/Images/back.png"
                BorderBrush="Transparent" Background="Transparent"/>
        <TextBlock x:Name="ProjectName" FontSize="12" Foreground="#444" FontFamily="{DynamicResource Bold}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Text="ProjectName"/>
      </Grid>
    </Border>
    <webview:WebView x:Name="Browser" Unloaded="Browser_Unloaded" Loaded="Browser_Loaded" Grid.Row="1"/>
  </Grid>
</UserControl>