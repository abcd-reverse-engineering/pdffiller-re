<UserControl x:Class="pdfFiller.UI.EmptyFolders.EmptyFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#fff">
  <Viewbox Margin="16" MinHeight="50" MinWidth="50" MaxHeight="300" MaxWidth="300" Stretch="Uniform">
    <StackPanel MaxWidth="300" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical"
                Margin="16">
      <Image Width="100" Height="100" Stretch="Uniform" Source="{Binding ImageSource}"/>
      <TextBlock Margin="0 12" TextWrapping="Wrap" TextAlignment="Center" Foreground="#444" FontSize="16"
                 FontFamily="{DynamicResource Bold}" Text="{Binding Title}"/>
      <TextBlock TextAlignment="Center" FontSize="11" Foreground="#444" TextWrapping="Wrap"
                 FontFamily="{DynamicResource Light}" Text="{Binding Message}"/>
    </StackPanel>
  </Viewbox>
</UserControl>