<UserControl x:Class="pdfFiller.UI.EmptyFolders.EmptyInboxEmailFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#fff">
  <Viewbox Margin="16" MinHeight="50" MinWidth="50" MaxHeight="300" MaxWidth="300" Stretch="Uniform">
    <StackPanel MaxWidth="300" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical"
                Margin="16">
      <Image Width="100" Height="100" Stretch="Uniform"
             Source="/pdfFiller;component/Resources/Images/EmptyFolders/empty_email.png"/>
      <TextBlock Margin="0 12" TextWrapping="Wrap" TextAlignment="Center" Foreground="#444" FontSize="16"
                 Text="{DynamicResource folder_email}" FontFamily="Segoe UI Semibold"/>
      <TextBlock TextAlignment="Center" FontSize="11" Foreground="#444" TextWrapping="Wrap"
                 Text="{DynamicResource empty_inbox_email_message}" FontFamily="Microsoft YaHei UI Light"/>
      <TextBox IsReadOnly="true" Style="{StaticResource CustomTextBox}" Text="{Binding Email, Mode=OneWay}"/>
      <Button Margin="0 8" Content="{DynamicResource copy_to_clipboard}" Style="{StaticResource OrangeButton}"
              Command="{Binding CopyToClipboard}"/>
    </StackPanel>
  </Viewbox>
</UserControl>