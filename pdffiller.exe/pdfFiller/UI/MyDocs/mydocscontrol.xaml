<UserControl x:Class="pdfFiller.UI.MyDocs.MyDocsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.UI.MyDocs"
             xmlns:tabsFolders="clr-namespace:pdfFiller.UI.TabsFolders"
             xmlns:fileList="clr-namespace:pdfFiller.UI.FilesList"
             xmlns:converters="clr-namespace:pdfFiller.Converters"
             xmlns:toolbar="clr-namespace:pdfFiller.UI.Toolbar"
             xmlns:addButton="clr-namespace:pdfFiller.UI.AddButton"
             Background="#fff">
  <FrameworkElement.Resources>
    <converters:FolderToNameConverter x:Key="folderToNameConverter"/>
    <converters:EmptyFolderToControlConverter x:Key="emptyFolderToControlConverter"/>
    <converters:BooleanVisibilityConverter x:Key="booleanVisibilityConverter"/>
    <local:MyDocsFilesListViewModel x:Key="MyDocsFilesViewModel"/>
    <local:MyDocsToolbarViewModel x:Key="MyDocsToolbarViewModel"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto" MinWidth="300" MaxWidth="700"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <tabsFolders:TabsAndFoldersControl Grid.Column="0"/>
    <GridSplitter Grid.Column="0" Width="2" Background="#eee"/>
    <Grid Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <toolbar:ToolbarControl Grid.Row="0" DataContext="{StaticResource MyDocsToolbarViewModel}"/>
      <fileList:FilesListControl Grid.Row="1" DataContext="{StaticResource MyDocsFilesViewModel}"/>
      <addButton:AddButtonControl Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="16"/>
    </Grid>
  </Grid>
</UserControl>