<UserControl x:Class="pdfFiller.UI.FindPdf.FindPdfControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             xmlns:viewModel="clr-namespace:pdfFiller.UI.FindPdf"
             xmlns:converter="clr-namespace:pdfFiller.Converters"
             xmlns:files="clr-namespace:pdfFiller.UI.FilesList"
             Background="White">
  <FrameworkElement.Resources>
    <viewModel:FindPdfFilesListViewModel x:Key="FileListViewModel"/>
  </FrameworkElement.Resources>
  <FrameworkElement.DataContext>
    <viewModel:FindPdfViewModel/>
  </FrameworkElement.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="35"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Border Background="Transparent" BorderThickness="0 0 0 1" BorderBrush="#eee">
      <Grid FocusManager.FocusedElement="{Binding ElementName=QueryField}">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Width="12" Height="12" Margin="8"
               Source="/pdfFiller;component/Resources/Images/LocalSearch/search_icon.png"/>
        <TextBox x:Name="QueryField" FontSize="12" Style="{StaticResource TextBoxWithHint}" Padding="8"
                 Tag="{DynamicResource search_for_documents_hint}" Grid.Column="1" Background="Transparent"
                 BorderBrush="Transparent"
                 prop:TextBoxAttachedProperties.OnTextChangeCommand="{Binding TextChangedCommand}"
                 Text="{Binding Path=Query, Mode=TwoWay}"
                 prop:TextBoxAttachedProperties.CaretIndex="{Binding Path=Query.Length, Mode=OneTime}"/>
        <Button Grid.Column="2" VerticalAlignment="Center" Margin="8 0" Background="Transparent"
                BorderBrush="Transparent" Cursor="Hand" FontSize="12" FontFamily="{DynamicResource Medium}"
                Foreground="#45688F" Content="{DynamicResource clear}"
                Visibility="{Binding HasQuery, Converter={StaticResource visibilityConverter}}"
                Command="{Binding ClearCommand}"/>
        <Button Grid.Column="3" VerticalAlignment="Center" Margin="8" Width="12" Height="12"
                Background="Transparent" BorderBrush="Transparent" Style="{StaticResource ImageButton}"
                prop:ButtonAttachedProperties.ButtonIcon="/pdfFiller;component/Resources/Images/close.png"
                Command="{Binding BackCommand}"/>
      </Grid>
    </Border>
    <files:FilesListControl DataContext="{StaticResource FileListViewModel}" Grid.Row="1"/>
  </Grid>
</UserControl>