<UserControl x:Class="pdfFiller.UI.TOS.TOSControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.UI.TOS"
             xmlns:webview="clr-namespace:pdfFiller.UI.WebView">
  <FrameworkElement.DataContext>
    <local:TOSViewModel/>
  </FrameworkElement.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <webview:WebView x:Name="Browser" Unloaded="Browser_Unloaded" Loaded="Browser_Loaded" Grid.Row="0"/>
    <Border BorderBrush="#eee" BorderThickness="0 0 0 2" Grid.Row="1">
      <Grid>
        <Button x:Name="Accept" Width="400" Cursor="Hand" Content="{DynamicResource accept_button}" Margin=" 0 8"
                Style="{StaticResource OrangeButton}" Command="{Binding OnAccept}"/>
      </Grid>
    </Border>
  </Grid>
</UserControl>