<UserControl x:Class="pdfFiller.UI.Main.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.UI.Main"
             xmlns:sideMenu="clr-namespace:pdfFiller.UI.SideMenu"
             xmlns:converters="clr-namespace:pdfFiller.Converters"
             xmlns:bottomMenu="clr-namespace:pdfFiller.UI.BottomMenu"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Background="White">
  <i:Interaction.Triggers>
    <i:EventTrigger EventName="Loaded">
      <i:CallMethodAction MethodName="LoadData" TargetObject="{Binding}"/>
    </i:EventTrigger>
  </i:Interaction.Triggers>
  <FrameworkElement.Resources>
    <converters:MainControlContentConverter x:Key="MainControlContentConverter"/>
  </FrameworkElement.Resources>
  <FrameworkElement.DataContext>
    <local:MainViewModel/>
  </FrameworkElement.DataContext>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <sideMenu:SideMenuControl Grid.Column="0" Grid.RowSpan="2"/>
    <ContentControl x:Name="Container" Grid.Column="1" Width="auto" Height="auto"
                    Content="{Binding Content, Converter={StaticResource MainControlContentConverter}}"/>
    <bottomMenu:BottomMenuControl Grid.Row="2" Grid.Column="1"/>
    <ContentControl x:Name="Container2" Grid.Column="1" Grid.RowSpan="2" Width="auto" Height="auto"
                    Content="{Binding ContentFull, Converter={StaticResource MainControlContentConverter}}"/>
  </Grid>
</UserControl>