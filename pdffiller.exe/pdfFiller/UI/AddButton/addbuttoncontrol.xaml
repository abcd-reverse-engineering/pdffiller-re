<UserControl x:Class="pdfFiller.UI.AddButton.AddButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.UI.AddButton">
  <FrameworkElement.DataContext>
    <local:AddButtonViewModel/>
  </FrameworkElement.DataContext>
  <FrameworkElement.Resources>
    <Style x:Key="AddButtonBorderAnimation" TargetType="{x:Type Border}">
      <Style.Triggers>
        <DataTrigger Binding="{Binding IsButtonCollapsed}" Value="True">
          <TriggerBase.EnterActions>
            <BeginStoryboard>
              <Storyboard>
                <DoubleAnimation Storyboard.TargetProperty="(Width)" From="230" To="46" Duration="0:0:0.2"/>
              </Storyboard>
            </BeginStoryboard>
          </TriggerBase.EnterActions>
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="AddButtonTextAnimation" TargetType="{x:Type TextBlock}">
      <Style.Triggers>
        <DataTrigger Binding="{Binding IsButtonCollapsed}" Value="True">
          <TriggerBase.EnterActions>
            <BeginStoryboard>
              <Storyboard>
                <DoubleAnimation Storyboard.TargetProperty="(Width)" From="100" To="0" Duration="0:0:0.2"/>
              </Storyboard>
            </BeginStoryboard>
          </TriggerBase.EnterActions>
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </FrameworkElement.Resources>
  <Button x:Name="AddButton" ContextMenu="{StaticResource AddDocumentMenu}"
          CommandParameter="{Binding ElementName=AddButton}" Command="{Binding AddButtonCommand}">
    <FrameworkElement.Style>
      <Style TargetType="{x:Type Button}">
        <Setter Property="Control.Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Name="Button" Background="#8bc34a" Style="{StaticResource AddButtonBorderAnimation}"
                      BorderBrush="Transparent" Height="{Binding CollapsedWidth}" Width="{Binding CurrentWidth}"
                      CornerRadius="{Binding CornerRadius}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                  <Image Margin="8" Width="12" Source="/pdfFiller;component/Resources/Images/plus.png"/>
                  <TextBlock Text="{DynamicResource add_document}" Foreground="White" FontSize="12"
                             Style="{StaticResource AddButtonTextAnimation}" FontFamily="{DynamicResource Medium}"
                             VerticalAlignment="Center"/>
                </StackPanel>
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </FrameworkElement.Style>
  </Button>
</UserControl>