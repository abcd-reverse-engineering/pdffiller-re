<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:converters="clr-namespace:pdfFiller.Converters"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="TabsStyle" TargetType="{x:Type TabItem}">
    <Setter Property="FrameworkElement.Cursor" Value="Hand"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TabItem}">
          <FrameworkTemplate.Resources>
            <converters:NumberToVisibilityConverter x:Key="numberVisibilityConverter"/>
            <converters:BooleanVisibilityConverter x:Key="booleanVisibilityConverter"/>
            <converters:HasNewProjectsToColorConverter x:Key="hasNewProjectsToColorConverter"/>
          </FrameworkTemplate.Resources>
          <Border x:Name="Border" Padding="21 7" BorderThickness="0.5" BorderBrush="#e7e6e6" Background="#f7f7f7">
            <StackPanel Orientation="Vertical" MinWidth="50">
              <Image x:Name="Icon" HorizontalAlignment="Center" Margin="0 0 0 4" Width="12"
                     Source="{Binding IconSource}"/>
              <TextBlock Grid.Row="1" VerticalAlignment="Bottom" Foreground="#474747" FontSize="8" TextAlignment="Center"
                         Text="{Binding Title}"/>
            </StackPanel>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="TabItem.IsSelected" Value="true">
              <Setter TargetName="Border" Property="Border.Background" Value="#fff"/>
              <Setter TargetName="Border" Property="Border.BorderThickness" Value="1 1 1 0"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>