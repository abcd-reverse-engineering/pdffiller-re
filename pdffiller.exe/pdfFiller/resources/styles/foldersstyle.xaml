<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:converters="clr-namespace:pdfFiller.Converters"
                    xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="FolderStyle" TargetType="{x:Type ListViewItem}">
    <Setter Property="FrameworkElement.ContextMenu" Value="{DynamicResource ActionsMenuStyle}"/>
    <Setter Property="FrameworkElement.Cursor" Value="Hand"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListViewItem}">
          <FrameworkTemplate.Resources>
            <converters:NumberToVisibilityConverter x:Key="numberVisibilityConverter"/>
            <converters:BooleanVisibilityConverter x:Key="booleanVisibilityConverter"/>
            <converters:HasNewProjectsToColorConverter x:Key="hasNewProjectsToColorConverter"/>
          </FrameworkTemplate.Resources>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="auto"/>
              <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Image Height="18" Width="24" Margin="16 16 11 16" Source="{Binding FolderImageSource}"/>
            <TextBlock VerticalAlignment="Center" MaxWidth="300" HorizontalAlignment="Left" TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis" Foreground="#222" FontSize="12" Grid.Column="1"
                       FontFamily="{DynamicResource Medium}" Text="{Binding Name}"/>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis" Foreground="#999" Margin="0 0 8 0" FontSize="10" Grid.Column="3"
                       FontFamily="{DynamicResource Medium}" Text="{Binding ProjectsCount}"/>
            <Button Style="{StaticResource ThreeDotsButtonStyle}" Grid.Column="4"
                    Visibility="{Binding Path=IsMenuHidden, Converter={StaticResource booleanVisibilityConverter}}"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <DataTemplate x:Key="FoldersTemplate">
    <ListViewItem Style="{StaticResource FolderStyle}"/>
  </DataTemplate>
</ResourceDictionary>