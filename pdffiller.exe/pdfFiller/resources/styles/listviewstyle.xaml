<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:templates="clr-namespace:pdfFiller.TemplateSelectors"
                    xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DataTemplate x:Key="TopFormsTemplate">
    <Grid Margin="8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Image Grid.Column="0" Margin="8" Width="16" Height="20"
             Source="/pdfFiller;component/Resources/Images/Projects/pdf.png" VerticalAlignment="Center"/>
      <TextBlock Grid.Column="1" FontSize="12" Foreground="#444444" FontFamily="{DynamicResource Bold}"
                 VerticalAlignment="Center" Text="{Binding Name}"/>
    </Grid>
  </DataTemplate>
  <DataTemplate x:Key="DividerTemplate">
    <Grid Background="#f5f5f5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock FontSize="10" Padding="16 8" Foreground="#444444" TextAlignment="Left"
                 FontFamily="{DynamicResource Medium}" VerticalAlignment="Center"
                 Text="{Binding Title, Converter={StaticResource caseConverter}}"/>
    </Grid>
  </DataTemplate>
  <templates:ProjectFolderTemplateSelector x:Key="TemplateDelegate" ThreeLineProjectTemplate="{StaticResource ThreeLineProjectsTemplate}"
                                           ProjectTemplate="{StaticResource ProjectsTemplate}"
                                           InboxS2SProjectTemplate="{StaticResource InboxS2SProjectsTemplate}"
                                           TopFormTemplate="{StaticResource TopFormsTemplate}"
                                           FolderTemplate="{StaticResource FoldersTemplate}"/>
  <templates:FoldersListTemplateSelector x:Key="FoldersTemplateDelegate" DividerTemplate="{StaticResource DividerTemplate}"
                                         FoldersTemplate="{StaticResource FoldersTemplate}"/>
  <Style x:Key="FillerListViewBase" TargetType="{x:Type ListViewItem}">
    <Setter Property="prop:ListViewAttachedProperties.ItemClickCommand"
            Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.ItemClickCommand}"/>
    <Setter Property="prop:ContextMenuAttachedProperties.IsRightClickContextMenu" Value="True"/>
    <Setter Property="FrameworkElement.ContextMenu" Value="{DynamicResource ActionsMenuStyle}"/>
    <Setter Property="UIElement.IsEnabled"
            Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.IsLoading, Converter={StaticResource inverseBooleanConverter}}"/>
    <Setter Property="FrameworkElement.Cursor" Value="Hand"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListViewItem}">
          <Grid>
            <ContentPresenter/>
            <Border x:Name="Border1" Visibility="Visible" BorderBrush="#eee" BorderThickness="0 0 0 0.5"
                    Background="Transparent"/>
            <Border x:Name="Border2" BorderBrush="#eee" BorderThickness="0 0 0 0.5" Visibility="Collapsed"
                    Background="#fff9f2">
              <ContentPresenter/>
            </Border>
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="UIElement.IsMouseOver" Value="true">
              <Setter TargetName="Border1" Property="UIElement.Visibility" Value="Collapsed"/>
              <Setter TargetName="Border2" Property="UIElement.Visibility" Value="Visible"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="FoldersListViewBase" TargetType="{x:Type ListViewItem}">
    <Setter Property="FrameworkElement.Cursor" Value="Hand"/>
    <Setter Property="prop:ContextMenuAttachedProperties.IsRightClickContextMenu" Value="True"/>
    <Setter Property="FrameworkElement.ContextMenu" Value="{DynamicResource ActionsMenuStyle}"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListViewItem}">
          <Grid>
            <ContentPresenter/>
            <Border x:Name="Border1" Visibility="Visible" BorderBrush="#eee" BorderThickness="0 0 0 0.5"
                    Background="Transparent"/>
            <Border x:Name="Border2" BorderBrush="#eee" BorderThickness="0 0 0 0.5" Visibility="Collapsed"
                    Background="#fff9f2">
              <ContentPresenter/>
            </Border>
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="ListBoxItem.IsSelected" Value="true">
              <Setter TargetName="Border1" Property="UIElement.Visibility" Value="Collapsed"/>
              <Setter TargetName="Border2" Property="UIElement.Visibility" Value="Visible"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="FillerListView" TargetType="{x:Type ListView}">
    <Setter Property="ItemsControl.ItemTemplateSelector" Value="{StaticResource TemplateDelegate}"/>
    <Setter Property="ItemsControl.ItemContainerStyle" Value="{StaticResource FillerListViewBase}"/>
    <Setter Property="ItemsControl.ItemsSource" Value="{Binding Data}"/>
    <Setter Property="prop:ListViewAttachedProperties.ScrollChangedCommand" Value="{Binding ScrollCommand}"/>
    <Setter Property="Control.Background" Value="White"/>
    <Setter Property="UIElement.Focusable" Value="false"/>
    <Setter Property="Control.BorderBrush" Value="Transparent"/>
  </Style>
</ResourceDictionary>