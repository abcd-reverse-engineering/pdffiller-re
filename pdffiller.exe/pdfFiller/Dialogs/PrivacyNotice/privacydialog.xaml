<UserControl x:Class="pdfFiller.Dialogs.PrivacyNotice.PrivacyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Dialogs.PrivacyNotice"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             xmlns:webview="clr-namespace:pdfFiller.UI.WebView"
             Padding="16" Width="340" Height="330" Background="White">
  <FrameworkElement.DataContext>
    <local:PrivacyDialogViewModel/>
  </FrameworkElement.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Source="/pdfFiller;component/Resources/Images/privacy.png" Height="80"
           Margin="0 0 0 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    <webview:WebView x:Name="Browser" Unloaded="Browser_Unloaded" Loaded="Browser_Loaded" Grid.Row="1"/>
    <Button x:Name="Accept" Grid.Row="2" Cursor="Hand" Content="{DynamicResource accept_button}" Margin="0 8"
            Style="{StaticResource OrangeButton}" Command="{Binding OnAccept}"/>
  </Grid>
</UserControl>