<UserControl x:Class="pdfFiller.Dialogs.AddDocument.AddDocumentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Dialogs.AddDocument"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:loader="clr-namespace:pdfFiller.Utils.View"
             Background="White">
  <FrameworkElement.DataContext>
    <local:AddDocumentDialogViewModel/>
  </FrameworkElement.DataContext>
  <FrameworkElement.Resources>
    <DrawingBrush x:Key="Focused" Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
      <DrawingBrush.Drawing>
        <DrawingGroup>
          <GeometryDrawing Brush="#ff9900">
            <GeometryDrawing.Geometry>
              <GeometryGroup>
                <RectangleGeometry Rect="0,0,50,50"/>
                <RectangleGeometry Rect="50,50,50,50"/>
              </GeometryGroup>
            </GeometryDrawing.Geometry>
          </GeometryDrawing>
        </DrawingGroup>
      </DrawingBrush.Drawing>
    </DrawingBrush>
  </FrameworkElement.Resources>
  <Grid>
    <Button Style="{StaticResource ImageButton}" Background="Transparent" Width="16" BorderBrush="Transparent"
            Command="{x:Static md:DialogHost.CloseDialogCommand}" Height="16" Margin="0,16,16,0"
            VerticalAlignment="Top" HorizontalAlignment="Right"
            prop:ButtonAttachedProperties.ButtonIcon="/pdfFiller;component/Resources/Images/close.png"
            Grid.Column="1"/>
    <Button Margin="40" Cursor="Hand" Grid.ColumnSpan="2" Command="{Binding OpenFilePickerDialogCommand}"
            prop:DragAndDropAttachedProperties.DragAndDropCommand="{Binding DragAndDropCommand}">
      <FrameworkElement.Style>
        <Style TargetType="{x:Type Button}">
          <Setter Property="Control.Template">
            <Setter.Value>
              <ControlTemplate TargetType="{x:Type Button}">
                <Border Name="Border" Padding="64" AllowDrop="true" CornerRadius="5" Background="White"
                        BorderBrush="{StaticResource Focused}" BorderThickness="1">
                  <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                      <RowDefinition Height="auto"/>
                      <RowDefinition Height="auto"/>
                      <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Image Width="30" Source="/pdfFiller;component/Resources/Images/upload_dialog.png"/>
                    <TextBlock Grid.Row="1" Margin="16" FontFamily="{DynamicResource Medium}"
                               Text="{DynamicResource add_document_message}" Foreground="#666"/>
                    <Button Grid.Row="2" Style="{StaticResource OrangeButton}" FontFamily="{DynamicResource Bold}"
                            Content="{DynamicResource select_from_device}" Command="{Binding OpenFilePickerDialogCommand}"/>
                    <ContentPresenter/>
                  </Grid>
                </Border>
                <ControlTemplate.Triggers>
                  <Trigger Property="UIElement.IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="Border.Background" Value="#1aff9900"/>
                  </Trigger>
                  <EventTrigger RoutedEvent="DragEnter">
                    <BeginStoryboard>
                      <Storyboard>
                        <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.Color" Duration="0:0:0"
                                        To="#1aff9900"/>
                      </Storyboard>
                    </BeginStoryboard>
                  </EventTrigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>
      </FrameworkElement.Style>
    </Button>
    <loader:Loader Visibility="{Binding IsLoading, Converter={StaticResource visibilityConverter}}"/>
  </Grid>
</UserControl>