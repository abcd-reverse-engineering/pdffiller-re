<UserControl x:Class="pdfFiller.Dialogs.ForgotPassword.ForgotPasswordDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Dialogs.ForgotPassword"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="300">
  <FrameworkElement.DataContext>
    <local:ForgotPasswordDialogViewModel/>
  </FrameworkElement.DataContext>
  <Border Background="White" Padding="16" CornerRadius="4">
    <Grid FocusManager.FocusedElement="{Binding ElementName=Email}">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <TextBlock Text="{DynamicResource forgot_password}" FontFamily="{DynamicResource Bold}" FontSize="18"
                 Foreground="#222" VerticalAlignment="Center" HorizontalAlignment="Left"/>
      <Button Style="{StaticResource ImageButton}" Background="Transparent" Width="16" BorderBrush="Transparent"
              Command="{x:Static md:DialogHost.CloseDialogCommand}" Height="16" VerticalAlignment="Top"
              HorizontalAlignment="Right"
              prop:ButtonAttachedProperties.ButtonIcon="/pdfFiller;component/Resources/Images/close.png"
              Grid.Column="1"/>
      <TextBlock x:Name="Email" Text="{DynamicResource forgot_password_message}" MaxWidth="270" TextWrapping="Wrap"
                 Margin="0 4 0 12" FontFamily="{DynamicResource Medium}" FontSize="12" Grid.Row="1"
                 Foreground="#6b6b6b" VerticalAlignment="Center" HorizontalAlignment="Left"/>
      <TextBox Grid.Row="2" Padding="8" Foreground="#222" Margin="0 0 0 20" FontFamily="{DynamicResource Medium}"
               Style="{StaticResource TextBoxWithHint}" Tag="{DynamicResource email_hint}"
               Text="{Binding Email, Mode=TwoWay}"
               prop:TextBoxAttachedProperties.CaretIndex="{Binding Path=Email.Length, Mode=OneTime}"
               prop:TextBoxAttachedProperties.OnTextChangeCommand="{Binding EmailChangedCommand}"/>
      <Button Style="{StaticResource OrangeButton}" Content="{DynamicResource reset_password}" Grid.Row="3"
              IsEnabled="{Binding IsEmaillCorrect}" Command="{Binding ContinueCommand}"/>
    </Grid>
  </Border>
</UserControl>