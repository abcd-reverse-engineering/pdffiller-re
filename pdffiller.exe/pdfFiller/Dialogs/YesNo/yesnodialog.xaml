<UserControl x:Class="pdfFiller.Dialogs.YesNo.YesNoDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White" MinWidth="250">
  <Border Padding="4" CornerRadius="4">
    <Grid VerticalAlignment="Center">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <TextBlock FontFamily="{DynamicResource Bold}" FontSize="14" TextWrapping="Wrap" TextAlignment="Center"
                 Margin="0 16 0 0" Foreground="#222" HorizontalAlignment="Center" Text="{Binding Title}"/>
      <TextBlock Grid.Row="1" Margin="12" TextWrapping="Wrap" TextAlignment="Center" Foreground="#414141"
                 FontFamily="{DynamicResource Medium}" FontSize="12" HorizontalAlignment="Center"
                 Text="{Binding Message}"/>
      <Grid Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Margin="8" Grid.Column="0" Height="40" Foreground="#222" Background="#eee"
                Style="{StaticResource OrangeButton}" Command="{Binding NoCommand}"
                Content="{Binding NoButtonText}"/>
        <Button Margin="8" Grid.Column="1" Height="40" Style="{StaticResource OrangeButton}"
                Command="{Binding YesCommand}" Content="{Binding YesButtonText}"/>
      </Grid>
    </Grid>
  </Border>
</UserControl>