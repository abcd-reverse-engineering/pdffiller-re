<UserControl x:Class="pdfFiller.Dialogs.Rename.RenameDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Dialogs.Rename"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prop="clr-namespace:pdfFiller.AttachedProperties"
             Padding="16" Width="300" Height="210" Background="White">
  <Grid FocusManager.FocusedElement="{Binding ElementName=NewName}">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" FontSize="24" Foreground="#222" FontFamily="{DynamicResource Bold}"
               Text="{Binding Title}"/>
    <TextBlock Grid.Row="1" Margin="0 8 0 0" FontSize="14" Foreground="#444"
               FontFamily="{DynamicResource Regular}" Text="{Binding Message}"/>
    <TextBox x:Name="NewName" Style="{StaticResource TextBoxWithHint}" Tag="Name" BorderBrush="#ddd" Padding="8"
             Grid.Row="2" Margin="0 16" Text="{Binding Name, Mode=TwoWay}"
             prop:TextBoxAttachedProperties.CaretIndex="{Binding Path=Name.Length, Mode=OneTime}"/>
    <Grid Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button Command="{x:Static md:DialogHost.CloseDialogCommand}" Margin="8" Grid.Column="0" Height="40"
              Foreground="#222" Background="#eee" Content="{DynamicResource cancel}"
              Style="{StaticResource OrangeButton}"/>
      <Button Margin="8" Grid.Column="1" Height="40" Content="{DynamicResource confirm}"
              Style="{StaticResource OrangeButton}" Command="{Binding ConfirmCommand}"/>
    </Grid>
  </Grid>
</UserControl>