<UserControl x:Class="pdfFiller.Dialogs.Error.ErrorDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Dialogs.Error"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="250" Background="#eeeeee">
  <FrameworkElement.DataContext>
    <local:ErrorDialogViewModel/>
  </FrameworkElement.DataContext>
  <Border Background="White" Padding="4" CornerRadius="8">
    <StackPanel Orientation="Vertical">
      <TextBlock VerticalAlignment="Top" Margin="16 16 16 8" Foreground="#222222" TextAlignment="Center"
                 TextWrapping="Wrap" FontFamily="{DynamicResource Bold}" HorizontalAlignment="Center"
                 Text="{Binding Header}"/>
      <TextBlock VerticalAlignment="Top" Margin="16" MaxWidth="248" TextWrapping="Wrap" Foreground="#414141"
                 FontFamily="{DynamicResource Regular}" HorizontalAlignment="Center" Text="{Binding Message}"/>
      <Button Margin="8" Content="{DynamicResource ok}" Style="{StaticResource OrangeButton}"
              Command="{Binding CloseCommand}"/>
    </StackPanel>
  </Border>
</UserControl>