<UserControl x:Class="pdfFiller.Utils.View.Loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pdfFiller.Utils.View"
             Width="100" Height="100">
  <FrameworkElement.Resources>
    <Storyboard x:Key="imageRotationStoryboard" TargetName="loadingImage"
                TargetProperty="RenderTransform.(RotateTransform.Angle)">
      <DoubleAnimation From="0" To="360" BeginTime="0:0:0" Duration="0:0:1.5" RepeatBehavior="Forever"/>
    </Storyboard>
  </FrameworkElement.Resources>
  <Grid>
    <Image Name="loadingImage" Width="30" Height="30" RenderTransformOrigin="0.5,0.5"
           Source="/pdfFiller;component/resources/images/loading.png">
      <FrameworkElement.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
          <EventTrigger.Actions>
            <BeginStoryboard Storyboard="{StaticResource imageRotationStoryboard}"/>
          </EventTrigger.Actions>
        </EventTrigger>
      </FrameworkElement.Triggers>
      <UIElement.RenderTransform>
        <RotateTransform Angle="0"/>
      </UIElement.RenderTransform>
    </Image>
  </Grid>
</UserControl>